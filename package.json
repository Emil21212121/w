{
  "name": "tests",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "babel-node src/main.js",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "codestyle": "run-p lint format",
    "codestyle:fix": "run-s lint:fix format:fix",
    "build": "babel src --out-dir build --source-maps inline",
    "test": "npx playwright test",
    "clean-results-after-report": "rimraf allure-results",
    "pretest": "rimraf allure-results",
    "test:ci": "cross-env CI=true NODE_OPTIONS=\"--max-old-space-size=2048\" jest",
    "coverage": "jest --coverage",
    "allure": "allure serve allure-results",
    "allure:ci": "allure generate allure-results --clean",
    "allure:ci:show": "allure open allure-report",
    "report": "allure generate --clean allure-results -o allure-report",
    "test-wallet": "npx playwright test tests/wallet.spec.js --config=playwright.config.desktop.js || exit 0",
    "test-wallet-mobile": "npx playwright test tests/wallet_mobile.spec.js --config=playwright.config.mobile.js || exit 0",
    "test-ui": "npx playwright test tests/ui.spec.js --config=playwright.config.desktop.js || exit 0",
    "test-ui-mobile": "npx playwright test tests/ui_tests_mobile.spec.js --config=playwright.config.mobile.js || exit 0",
    "test-wallet-and-report-slack": "npm run test-wallet && npm run report && node scripts/sendResultsToSlack.js wallet-desktop",
    "test-wallet-mobile-and-report-slack": "npm run test-wallet-mobile && npm run report && node scripts/sendResultsToSlack.js wallet-mobile",
    "test-ui-and-report-slack": "npm run test-ui && npm run report && node scripts/sendResultsToSlack.js ui-desktop",
    "test-ui-mobile-and-report-slack": "npm run test-ui-mobile && npm run report && node scripts/sendResultsToSlack.js ui-mobile"
  },
  "author": "Emil Qa",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.24.7",
    "@babel/core": "^7.24.7",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.24.7",
    "@faker-js/faker": "^8.4.0",
    "@jest/types": "^29.6.3",
    "@playwright/test": "^1.46.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.14.2",
    "allure-commandline": "^2.29.0",
    "allure-jest": "^2.12.1",
    "allure-playwright": "^3.0.0-beta.5",
    "axios": "^1.7.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "fs": "0.0.1-security",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.1.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4"
  },
  "dependencies": {
    "dotenv": "^16.4.1",
    "got": "^14.1.0",
    "playwright": "^1.44.1"
  }
}
